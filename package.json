{
  "name": "react-native-toast-banner",
  "version": "0.7.0",
  "description": "An animating banner fully based on Javascript",
  "author": "Bright Lee",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benevbright/react-native-toast-banner.git"
  },
  "keywords": [
    "react-native",
    "banner",
    "toast",
    "react",
    "notification"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
